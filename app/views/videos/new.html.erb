<div class="form-share">
  <%= form_with model: @video do |f|%>
    <div class="form-group row">
      <label for="url" class="col-sm-2 col-form-label">Youtube Url:</label>
      <div class="col-sm-10">
        <input name="video[link]" class="form-control" type="input">
      </div>
    </div>
    <div class="form-group row">
      <label for="share" class="col-sm-2 col-form-label"></label>
      <div class="col-sm-10">
        <%= f.submit "Share", class: "btn btn-outline-success" %>
      </div>
    </div>
  <% end %>
</div>